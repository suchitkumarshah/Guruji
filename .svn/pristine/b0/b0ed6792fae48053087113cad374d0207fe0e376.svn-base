<%@include file="inc/header.html"%>
<section class="">
	<div class="container">
		<div class="row center-sm">
			<div class="col-xs-12 col-sm-10 col-lg-6">
				<div class="whiteBg">
					<div class="row center-xs">
						<div class="col-xs-11 voffset5">
							<h1 class="pageHeading">Hey! You're back!</h1>
							<h6 class="voffset1">Sign in to your account</h6>
						</div>
						<div class="col-xs-11 col-sm-10 col-md-8 voffset3">
							<form method="POST" name="loginForm" id="loginForm">								
								<div class="row">
									<div class="col-xs-12 voffset2">
										<input type="email" name="email" class="form-control" placeholder="Email address" required>
									</div>									
									<div class="col-xs-12 voffset2">
										<div class="passwordWrap">
											<input type="password" name="password" class="form-control showHidePassword" placeholder="Password" required>
											<button type="button" class="passwordSwitcher passwordChange">show password</button>
										</div>
									</div>
									<div class="col-xs-12 voffset2">
										<button type="button" class="btnLink fullWidth gradBg submitFormBtn"><span>Login<i class="rightArrow white"></i></span></button>
									</div>
									<div class="col-xs-12 voffset1">
										<a href="forgot-password.jsp" class="btnLink"><span>Forgot password?<i class="rightArrow white"></i></span></a>
									</div>								
									<div class="col-xs-12 voffset4">
										<h6>Don't have any account yet?</h6>
										<div class="btnsWrap voffset1">
											<a href="signup.jsp" class="btnLink transGreen"><span>Sign up now!<i></i></span></a>
										</div>
									</div>
								</div>
							</form>
						</div>			
						<div class="col-xs-12 voffset3">&nbsp;</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
